@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using it_tools.Components.Admin.Layout
@using it_tools.Components.Admin.Auth
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<AdminAuthorizationFilter>
    <div class="flex h-screen w-screen bg-gray-50">
        <!-- Sidebar -->
        <div class="bg-gradient-to-b from-gray-900 to-gray-800 text-white w-64 min-h-screen p-4 shadow-lg">
            <NavMenuAdmin />
        </div>

        <!-- Main content -->
        <div class="flex-1 flex flex-col">
            <header class="bg-white shadow-md p-4 flex items-center justify-between">
                <h1 class="text-2xl font-semibold text-gray-800">Admin Management</h1>
                <div class="flex items-center space-x-4">
                    <button @onclick="NavigateToHome" class="text-indigo-600 hover:text-indigo-800 font-medium transition-colors duration-200">
                        View Home Page
                    </button>
                    <button @onclick="LogoutAdmin" class="text-red-600 hover:text-red-800 font-medium transition-colors duration-200">
                        Logout
                    </button>
                </div>
            </header>
            <main class="flex-1 p-6 overflow-auto bg-gray-50">
                @Body
            </main>
        </div>
    </div>
</AdminAuthorizationFilter>

@code {
    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    private void LogoutAdmin()
    {
        NavigationManager.NavigateTo("/admin/logout", forceLoad: true);
    }
}
@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using it_tools.Components.Admin.Layout
@using it_tools.Components.Admin.Auth
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<AdminAuthorizationFilter>
    <div class="flex h-screen w-screen bg-gray-100">
        <!-- Sidebar -->
        <NavMenuAdmin />

        <!-- Main content -->
        <div class="flex-1 flex flex-col">
            <header class="bg-white shadow-sm p-4 flex items-center justify-between">
                <div class="flex items-center">
                    <h1 class="text-xl font-semibold text-gray-900">Admin Management</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <button @onclick="NavigateToHome" 
                            class="px-4 py-2 text-indigo-600 hover:text-indigo-800 font-medium rounded-lg hover:bg-indigo-50 transition-all duration-200">
                        View Home Page
                    </button>
                    <button @onclick="LogoutAdmin" 
                            class="px-4 py-2 text-red-600 hover:text-red-800 font-medium rounded-lg hover:bg-red-50 transition-all duration-200">
                        Logout
                    </button>
                </div>
            </header>
            <main class="flex-1 p-6 overflow-auto bg-gray-100">
                @Body
            </main>
        </div>
    </div>
</AdminAuthorizationFilter>

@code {
    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    private void LogoutAdmin()
    {
        NavigationManager.NavigateTo("/admin/logout", forceLoad: true);
    }
}